#!/bin/sh

# This script is sourced by the others. It's responsible for ensuring that any
# platform-specific environment variables are set up correctly based on the
# value of the generic $ENVIRONMENT variable. If your language or framework
# needs environment variables that can be derived in this way, this is a great
# place to put them, to declutter your `docker-compose.yml` and `deploy.yml`.

case "$ENVIRONMENT" in
  "")
    ENVIRONMENT="development"
    RAILS_ENV="development"
    ;;
  *)
    RAILS_ENV=$ENVIRONMENT
esac

# Be sure to export any environment variables being set if you want them to be
# available to other scripts and programs.
export ENVIRONMENT RAILS_ENV
