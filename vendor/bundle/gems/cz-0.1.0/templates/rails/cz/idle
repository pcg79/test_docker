#!/bin/sh

# This script should never need to be changed. It's just idling for the purposes
# of keeping a container up and running while we copy data over to a vault
# volume.

. $PWD/cz/forward_term
. $PWD/cz/environment

echo "$CZ_APP_NAME ($CZ_APP_VERSION) idling in $ENVIRONMENT..."

idle() {
  tail -f /dev/null &
}

forward_term idle
