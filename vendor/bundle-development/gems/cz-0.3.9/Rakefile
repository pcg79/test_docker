require 'bundler'
require 'geminabox-release'
require 'rake/testtask'

GeminaboxRelease.patch(:host => 'http://gems.czops.net:9292')

Rake::TestTask.new(:test) do |t|
  t.libs << 'test'
  t.libs << 'lib'
  t.test_files = FileList['test/**/*_test.rb']
end

task :default => :test

Rake::Task['release'].clear
task :release => 'inabox:release'
